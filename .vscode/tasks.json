{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar programa C",
      "type": "shell",
      "command": "C:/MinGW/bin/gcc.exe",
      "args": [
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/build/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "Executar programa C",
      "type": "shell",
      "command": "${fileDirname}/build/${fileBasenameNoExtension}.exe",
      "dependsOn": "Compilar programa C",
      "group": {
        "kind": "test",
        "isDefault": true
      }
    }
  ]
}
